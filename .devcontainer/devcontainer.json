{
    "name": "Python Control System Development",
    "build": {
        "context": "..",
        "dockerfile": "./Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.profiles.linux": {
                    "zsh": {
                        "path": "/usr/bin/zsh",
                        "args": [
                            "-l"
                        ]
                    }
                }
            }
        }
    },
    "remoteUser": "vscode",
    "forwardPorts": [
        8888
    ]
}
